@page
@model JavascriptClient1.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div class="form-group row">
        <label for="username" class="col-2 col-form-label">Username</label>
        <div class="col col-sm-6">
            <input id="username" name="username" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="password" class="col-2 col-form-label">Password</label>
        <div class="col col-sm-6">
            <input id="password" name="password" class="form-control" />
        </div>
    </div>

    <div class="form-group row" style="color:red">
        <label for="notification" class="col-2 col-form-label">@Model.notification</label>
    </div>


    <input type="submit" id="submitPassword" class="btn btn-primary" asp-page-handler="Login"  value="Login">
</form>
